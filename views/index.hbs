<div class="row"> <!-- watched directory -->
	<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 directory-status">
		<h4>Current: {{current}}</h4>
	</div>
</div>
<div class="row"> <!-- directory content -->
	<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 directory-status">
		{{#each contents}}
		<div class="row">
			<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 directory-status">
				<a href='{{resourcePath value ../current}}'>{{relativePath value.file ../current}}</a>
			</div>
		</div>
		{{/each}}
	</div>
</div>
